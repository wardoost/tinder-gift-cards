extends layouts/base

block vars
  -pageTitle = null; //- Custom page title
  -metaKeywordsPage = ""; //- Extra keywords for this page

block content
  //- Notifications for old browsers and no javscript
  section#notifications
    <!--[if lt IE 8]>
    <div class="notification danger">
    <div class="container">
    <h5>You are using a dangerously old browser which may cause this site to not work properly. <a href="http://windows.microsoft.com/nl-BE/internet-explorer/download-ie">Please update</a> your browser to have a richer and safer browsing experience.</h5>
    </div>
    </div>
    <![endif]-->
    noscript: .notification.warning
      .container.text-center: h5 JavaScript is disabled which may cause this site to not work properly. Please enable JavaScript in your web browser.

  section#main
    header(class="parallax-window" data-parallax="scroll" data-image-src="img/header.jpg")
      img(src="img/logo.svg" alt="TinderMe Cards").img-responsive
      a(href="#steps")#nextBtn
        span.icon.icon-down

    section#steps
      .container
        .row
          .col-sm-4
            .box
              i.icon.icon-card
              .content
                h3 Generate
                p The only thing the card generator needs is your Tinder username.
          .col-sm-4
            .box
              i.icon.icon-print
              .content
                h3 Print
                p Print your pdf and cut your 8 personalized TinderMe cards on a regular printing paper.
          .col-sm-4
            .box
              i.icon.icon-heart
              .content
                h3 Flirt
                p Start flirting in real life and handout your TinderMe card to seal the deal.

    section#generate.dark
      .container
        .row
          .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.text-center
            form(role="form" data-toggle="validator" onsubmit="return false;")
              .form-group
                .input-group.input-group-lg
                  span.input-group-addon @
                  input#inputTinderUsername.form-control(type='text', placeholder='Tinder username' required)
                  .input-group-btn
                    a(href="#tutorial").btn.btn-info
                      span.icon.icon-question

              button.btn.btn-lg.btn-primary(type='submit')#generateBtn
                | Generate PDF
    
    section#pdf
      .container
        .row
          .col-sm-12
            h1 What’s in my PDF?
        .row#advantages
          .col-sm-5
            img(src="img/pdf.svg" alt="pdf").img-responsive
          .col-sm-7
            ul
              li.icon-doc In A4 format with 8 TinderMe cards
              li.icon-lines Every card has a unique pickup line!
              li.icon-profile Your primary Tinder profile picture
              li.icon-qr QR code to your Tinder profile

    section#tutorial
      .container
        .row
          .col-sm-12
            h1 What’s my Tinder username?
        .row#steps
          .col-sm-6
            ol
              li.icon-n1 Go to settings in Tinder
              li.icon-n2 “Discovery Settings”
              li.icon-n3 Tap “Username” and claim yours
          .col-sm-6
            img(src="img/tutorial.gif" alt="tutorial").img-responsive

  footer
    .container
        p.text-footer #{websiteTitle} | Last update on #{timeStamp}