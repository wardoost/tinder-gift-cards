include mixins

-var websiteTitle = "Tinderme Cards"
-var metaDescription = "Cards to handout your Tinder profile"; //- Keep between 150 and 160 characters
-var metaKeywordsGlobal = "Tinder, cards, dating card, dating, generate"; //- Global and page keywords should contain relevant keywords (max 20)

block vars

doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no")
    meta(name="author" content="Dries Depoorter, Ward Oosterlijnck")


    //----------------------------------------------
    //- Meta and title tags, link to sitemap important for SEO
    //----------------------------------------------
    meta(name="description" content=metaDescription)
    meta(name="robots" content="index, follow")
    meta(name="revisit-after" content="3 month")

    if metaKeywordsGlobal && metaKeywordsPage
      meta(name="keywords" content=metaKeywordsGlobal + "," + metaKeywordsPage)
    else if metaKeywordsGlobal
      meta(name="keywords" content=metaKeywordsGlobal)
    else if metaKeywordsPage
      meta(name="keywords" content=metaKeywordsPage)

    //- Keep page title under 50 to 60 characters
    block title
      if pageTitle
        title #{pageTitle} | #{websiteTitle}
      else
        title #{websiteTitle}

    //- Sitemap link
    link(href=deployUrl + "sitemap.xml" rel="sitemap" type="application/xml" title="Sitemap")

    //- Canonical link
    link(href=absoluteUrl rel="canonical")


    //----------------------------------------------
    //- Social media meta tags
    //----------------------------------------------
    
    //- Open Graph (facebook)
    meta(property="og:type", content="website")
    meta(property="og:url", content=absoluteUrl)
    if pageTitle
      meta(property="og:title", content=pageTitle + " - " + websiteTitle)
    else
      meta(property="og:title", content=websiteTitle)
    meta(property="og:description", content=metaDescription)
    meta(property="og:image", content=deployUrl + "img/social-share.png")

    //- Twitter
    meta(name="twitter:card" content="photo")
    meta(name="twitter:url" content=absoluteUrl)
    if pageTitle
      meta(name="twitter:title" content=pageTitle + " - " + websiteTitle)
    else
      meta(name="twitter:title" content=websiteTitle)
    meta(name="twitter:description" content=metaDescription)
    meta(name="twitter:image" content=deployUrl + "img/social-share.png")


    //----------------------------------------------
    //- Include favicons links
    //----------------------------------------------
    include ../includes/icons


    //----------------------------------------------
    //- CSS links
    //----------------------------------------------
    link(href=baseUrl + "assets/style.min.css" rel="stylesheet" type='text/css')

    //----------------------------------------------
    //- JS head links
    //----------------------------------------------
    script(src=baseUrl + "assets/head.min.js")


  //----------------------------------------------
  //- Body (ontouchstart fix to enable hover state for tapping on links)
  //----------------------------------------------
  body(ontouchstart="")#page-top
    block content

    //----------------------------------------------
    //- JS body links
    //----------------------------------------------
    script(src=baseUrl + "assets/body.min.js")
